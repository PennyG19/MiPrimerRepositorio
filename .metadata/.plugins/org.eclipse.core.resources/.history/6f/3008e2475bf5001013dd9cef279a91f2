package com.mx.Automovil;

public class Automovil {
	//DECLARACION DE LOS ATRIBUTOS
	
	private String marca;
	private String subMarca;
	private int precio;
	private String color;
    //DECLARACION DE LOS CONSTRUCTORES
	
	//CONSTRUCTOR POR DEFECTO	
	public Automovil() {
		
	}
	//CONSTRUCTOR CON PATAMETROS O CONSTRUCTOR PARAMETRZADOS 
    //INICIALIZA LA CLASE CON SUS ATRIBUTOS
	public Automovil(String marca, String subMarca, int precio, String color){
	      this.marca = marca;
	      this.subMarca = subMarca;
	      this.precio = precio;
     }
	
	//geter y setter : Nos permiten acceder de forma controlada a los atributos
	
	//gerÂ¡tter sirve para obtener el valor del atributo
	
	public String getMarca() {
		return marca;
	}
	
	public void setMarca(String Marca){
		
	}
	
	public String getsubMarca() {
		return subMarca;		
	}
	
	public void setsubMarca(String subMarca) {
				
	}
	public String getSubMarca() {
		return subMarca;
	}
	public void setSubMarca(String subMarca) {
		this.subMarca = subMarca;
	}
	public int getPrecio() {
		return precio;
	}
	public void setPrecio(int precio) {
		this.precio = precio;
	}
	public String getColor() {
		return color;
	}
	public void setColor(String color) {
		this.color = color;
	}
	
	
	//Metodo toString: convertir las cadenas en legibles para que se puedan interpretar
	@Override
	public String toString() {
		return "Automovil = [marca= " + marca+ "subMarca=" + subMarca + "precio=" + precio +
				             "Color=" + color + "]\n";
	}
	
  
}

